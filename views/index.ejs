<script src="https://cdn.socket.io/socket.io-1.3.7.js"></script>
<script src="http://code.jquery.com/jquery-1.11.1.js"></script>
<script>
    var socket = io('http://104.254.99.175:3000/uploadCoordinates');
    var userId = 1;
  	socket.on('connect', function(){
  		console.log('client connect server');
  		socket.emit('uploadUserId', userId);
  		socket.emit('uploadCoordinates', JSON.stringify({
  			userId : userId,
  			coordinates : {
  				longitude : 50,
  				latitude : 50
  			}
  		}));
  	});
  	socket.on('event', function(data){

  	});
  	socket.on('disconnect', function(){
  		console.log('client disconnect server');
  	});
  	socket.on('uploadUserId', function(message){
  		console.log('client receive a message: ' + message);
  		$('.content').append($('<li>').text(message));
  	});
    
    socket.on('nearbyClients', function(message){
      console.log(message);
      $('.content').append($('<li>').text(message));
    });

  	$(document).ready(function() {
  		$('#sendMsg').click(function(){
  			console.log('send Button clicked');
  			console.log($('.message').html());
  			socket.emit('message', {address: 'www'});
  			$('.message').html('');
  		});
	});
</script>
<style type="text/css">
	.message{
		width: 400px; 
		min-height: 120px; 
	    max-height: 300px;
	    _height: 120px; 
		margin-left: auto; 
		margin-right: auto; 
		padding: 3px; 
		outline: 0; 
		border: 1px solid #a0b3d6; 
		font-size: 12px; 
		word-wrap: break-word;
		overflow-x: hidden;
		overflow-y: auto;
		_overflow-y: visible;
	}

	#sendMsg{
		display: block;
		width: 100px;
		margin-right: auto;
		margin-left: auto;
	}
</style>	
</script>
<body>
	<div class="content">
	</div>
		
	<div class="message" contenteditable="true">
		
	</div>
	<button id="sendMsg" value="Send" name="Send">Send</button>
</body>
